<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <com.ykx.organization.libs.views.ImageViewPlus
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/svg_teacher"
            android:background="@drawable/corner_imageview_teacher_bg"
            android:id="@+id/teacher_header_photo_image"/>

        <TextView
            android:text="xxx"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            style="@style/ListViewItemSecondTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sz"
            android:id="@+id/state_imageView"/>
    </LinearLayout>

</LinearLayout>
