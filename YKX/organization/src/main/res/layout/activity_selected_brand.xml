<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selected_brand"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ykx.organization.pages.SelectedBrandActivity">

    <TextView
        android:text="@string/selected_brand_activity_notice"
        android:textColor="@color/default_second_text_color"
        android:gravity="center"
        android:background="@color/default_line_color"
        android:paddingLeft="10dp"
        android:textSize="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/notice_view"/>
    <ListView
        android:id="@+id/brand_list_view"
        android:divider="@null"
        android:background="@color/default_line_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
