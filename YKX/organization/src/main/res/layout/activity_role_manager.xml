<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_role_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ykx.organization.pages.home.operates.empmanager.RoleManagerActivity">


    <TextView
        android:text="@string/emp_manager_activity_role_manager_notices"
        android:textColor="@color/default_second_text_color"
        android:gravity="center"
        android:background="@color/default_line_color"
        android:paddingLeft="10dp"
        android:textSize="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/role_manager_notices"/>

    <HorizontalScrollView
        android:id="@+id/role_menu_scroll_title_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/role_menu_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/role_menu_c_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>
