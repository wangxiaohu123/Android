                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/svg_detail"
                        android:layout_width="6dp"
                        android:layout_height="12dp"/>
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
