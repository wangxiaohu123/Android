<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingRight="@dimen/list_view_item_margin_left"
        android:paddingLeft="@dimen/list_view_item_margin_right"
        android:layout_marginTop="@dimen/list_view_item_margin_top"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/role_model_view"
            style="@style/ViewItemSecondTextStyle"
            android:text="操作权限"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/svg_switch_off"
            android:id="@+id/open_switch_view"
            android:layout_width="37dp"
            android:layout_height="20dp" />

        <!--<Switch-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/open_switch_view"-->
            <!--android:thumb="@drawable/switch_thumb"-->
            <!--android:track="@drawable/switch_track"-->
            <!--android:layout_weight="1"/>-->
    </RelativeLayout>

    <ScrollView
        android:id="@+id/role_item_content_view"
        android:layout_marginTop="-15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/role_item_view"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="@dimen/list_view_item_margin_left"
            android:layout_marginRight="@dimen/list_view_item_margin_right"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/buttom_line_view"
        android:layout_marginRight="@dimen/list_view_item_margin_right"
        android:layout_marginLeft="@dimen/list_view_item_margin_left"
        android:background="@drawable/view_xx_line"
        android:layout_width="match_parent"
        android:layerType="software"
        android:layout_height="2dp"/>
</LinearLayout>
