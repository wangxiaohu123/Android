<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/list_view_item_margin_top"
        android:paddingLeft="@dimen/list_view_item_margin_left"
        android:paddingRight="@dimen/list_view_item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ykx.organization.libs.views.ImageViewPlus
            android:background="@drawable/svg_teacher"
            android:id="@+id/photo_view"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_textview"
                    android:layout_alignParentLeft="true"
                    android:text="xxx"
                    android:layout_marginTop="@dimen/list_view_item_margin_top"
                    android:layout_marginLeft="10dp"
                    style="@style/ListViewItemTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/svg_female"
                    android:id="@+id/gander_view"
                    android:layout_toRightOf="@+id/name_textview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>

                <ImageView
                    android:src="@drawable/svg_home_curriculum_more_small"
                    android:id="@+id/edit_view"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:layout_width="35dp"
                    android:layout_height="15dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/list_view_item_margin_top"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/svg_pf_name"
                    android:layout_toRightOf="@+id/name_textview"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/jobs_textview"
                    android:layout_alignParentLeft="true"
                    android:text="xxxxxxxxxxxx"
                    android:layout_marginLeft="10dp"
                    style="@style/ListViewItemSecondTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/list_view_item_margin_top"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/list_view_item_margin_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/svg_phone"
                    android:layout_toRightOf="@+id/name_textview"
                    android:layout_marginLeft="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/phone_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="3dp"
                    android:text="15982848645"
                    style="@style/ListViewItemSecondTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:visibility="gone"
        android:background="@color/default_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_item_margin_buttom"/>

</LinearLayout>
