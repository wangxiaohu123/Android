<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentication_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ykx.organization.pages.authentication.AuthenticationResultActivity">

    <LinearLayout
        android:id="@+id/state_view"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/svg_wait"
            android:id="@+id/state_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/state_title_view"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/brandmanager_activity_base_item_state2"
            android:textSize="@dimen/size_16"
            android:textColor="@color/theme_first_text_color"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/state_des_vew"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:text="@string/brandmanager_activity_base_item_state21"
            android:textSize="@dimen/size_14"
            android:textColor="@color/default_second_text_color"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="60dip"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/reauto_view"
            android:onClick="toAutoBrandAction"
            android:visibility="gone"
            android:text="@string/brandmanager_activity_base_item_reauto"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16"
            android:gravity="center"
            android:background="@drawable/textview_selector"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/logo_imageview"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="120dp"/>

    </LinearLayout>

</LinearLayout>
