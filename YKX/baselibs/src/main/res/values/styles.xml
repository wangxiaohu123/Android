    <style name="AppSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- activity 过渡动画 -->
    <style name="ActivityInOrOutAnimation">
        <item name="@android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="@android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="@android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="@android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <!--不带动画的对话框style-->
    <style name="style_dialog_without_anim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--列表项普通文字样式-->
    <style name="ItemTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_3</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--竖向分割线-->
    <style name="columnDivider">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <!--横向分割线-->
    <style name="rowDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <!--蓝底白字按钮背景-->
    <style name="FunctionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/button_shape</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>

    </style>

    <!-- 文字样式 -->

    <style name="NavigationMenuTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/default_second_text_color</item>
        <item name="android:textSize">10dip</item>
    </style>

    <style name="NavigationTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">33dip</item>
    </style>


    <style name="CellMenuTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_first_text_color</item>
        <item name="android:textSize">12dip</item>
    </style>


    <style name="TitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dip</item>
    </style>


    <style name="standardTextStyle">
        <item name="android:textColor">@color/default_second_text_color</item>
        <item name="android:textSize">13dip</item>
    </style>

    <style name="MinorityTextStyle">
        <item name="android:textColor">@color/default_second_text_color</item>
        <item name="android:textSize">12dip</item>
    </style>

    <style name="MostTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dip</item>
    </style>


    <style name="ListViewItemTitleTextStyle">
        <item name="android:textColor">@color/theme_first_text_color</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="ListViewItemSecondTextStyle">
        <item name="android:textColor">@color/default_second_text_color</item>
        <item name="android:textSize">13dip</item>
    </style>

    <style name="ListViewItemThirdextStyle">
        <item name="android:textColor">@color/default_second_text_color</item>
        <item name="android:textSize">12dip</item>
    </style>

    <style name="ViewItemSecondTextStyle">
        <item name="android:textColor">@color/default_first_text_color</item>
        <item name="android:textSize">14dip</item>
    </style>

</resources>
